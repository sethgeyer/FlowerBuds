<head>
    <style>
      label[for=name],
      label[for=company_id],
      label[for=status],
      label[for=primary_poc],
       label[for=poc_email],
      label[for=poc_phone_w],
      label[for=poc_phone_c],
      label[for=city],
      label[for=state],
      label[for=zip],
      label[for=company_logo]
            {
        width: 150px;
        float: left;
      }
      .label-spacer {
        width: 50px;
        height: 1px;
        float: left;
      }
    </style>
