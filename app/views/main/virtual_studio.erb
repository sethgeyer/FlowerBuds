	popupWindow = window.open(
		url,'popUpWindow','height=800,width=400,left=900,top=10,resizable=yes,scrollbars=yes,toolbar=no,menubar=no,location=no,directories=no,status=yes')
}
</script>

<p><a href="JavaScript:newPopup('/popup_specs/<%=@event.id%>');">Show Me the Specifications for each Arrangement</a></p> 
    
 