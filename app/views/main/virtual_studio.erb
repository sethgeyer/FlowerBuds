      <%= form_tag("/virtual_studio_update") do %>
  
      <%=hidden_field_tag "event_id", @event.id%>
      <th>Items to Include</th>
      <%for specification in @specifications%>
        <th><%=specification.item_name%></th>    
      <%end%>
      
      <tr> 
      
      <%for each in @list_of_products%>
         <%id = Product.where(name: each).first.id%>
          <td><%=each%></td> 
          <% for specification in @specifications%>
            <td><%x = DesignedProduct.where(product_id: id).where(specification_id: specification.id).first%>
               
                  <%stem_count=x.product_qty%>
                  <%=text_field_tag "stemcount_#{x.id}", stem_count%> </td>               
          <%end%> 
          <td>            <div class = 'label-spacer'></div>
      
     <button name= "update" value= "update"></button>    
