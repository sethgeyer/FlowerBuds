  <!DOCTYPE html>
<html>
  <head>
    <title>Specs</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    
    <div class="container">
      <h4> Specifications for <%=Event.where(id: @event_id).first.name%> </h4> 
      
  
      <table class="table table-striped table-hover, table-condensed, table-bordered ">
        <th class="span12">Description & Details</th>
       
        <%for specification in @specifications%>
          <tr>
            <td><b><%=specification.item_name%></b><br>
              <% if specification.item_specs != nil%>
                <%= raw(specification.item_specs.gsub("\n", "<br>"))%>
              <%end%>
              <div class="row-fluid">
              <ul class="nails2">
              
              
              
              <% for image in specification.images %>
                <li class="image_align">
                  <div class="thumbnail">    
                    <img class="image_size" src="<%= image_data_path(image.id, image.extens) %>">
                  </div>
                    <div class="display_name"><%=image.display_name%><br></div>
                </li>
              <%end%> 
    </div
          
          
          
          
          
          
          
          
          
          
          </td> </tr>
      <%end%>
    </table>
  </body>
</html>
