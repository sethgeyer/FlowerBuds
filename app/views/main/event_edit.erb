
<%= form_tag("/event_edit") do %>  




<div class="row-fluid">
<div class="span9">
<h3>Edit Event for <a href= "/cust_edit/<%=@event.customer.id%>"> <%= @event.customer.name%></a> </h3>
</div>
<div class="span3 ">
<%= select_tag "lead_designer", options_for_select(@employee_list, @event.employee.name), class: "pull-right"%>
</div>
</div>

 

<% if flash[:error] != nil %>
  <div class="flash-error">
    <%= flash[:error]%>
  </div><br>
<%end%> 

<%=error_messages_for @event%>
            
<%=hidden_field_tag "customer_id", @event.customer.id%> 
<%=hidden_field_tag "event_id", @event.id%>        



  <div class="row-fluid">
     <div class="span3">
      <%= label_tag "event_name", "Event Name: *"%>
      <%= text_field_tag "event_name", @event.name, class: "span12"%>   
      
    
            <%= label_tag "locations", "Locations(s):"%>
            <%= text_field_tag "locations", @event.locations, class: "span12 input-xlarge"%>
           
            <div class="row-fluid">
              <div class="span4">
                <%= label_tag "event_date", "Event Date: *"%>
                <%= text_field_tag "event_date", @event.date_of_event, class: "span12"%>
              </div>
              <div class="span4">
                <%= label_tag "event_time", "Event Time:"%>   
                <%= text_field_tag "event_time", @event.time, class: "span12"%>
              </div>
              <div class="span4">
                <%= label_tag "setup_time", "Setup Time:"%>
                <%= text_field_tag "setup_time", @event.delivery_setup_time, class: "span12"%>
              </div>
            </div>
                                   
          </div>
    
     <div class="span4">
            <div class="row-fluid">
              <div class="span6">
                <%= label_tag "color_palette", "Colors:"%>
                <%= text_field_tag "color_palette", @event.color_palette, class: "span12 input-xlarge"%>
              </div>
              <div class="span6">
                <%= label_tag "flower_types", "Flower Type:"%>
                <%= text_field_tag "flower_types", @event.flower_types, class: "span12 input-xlarge"%>
              </div>
           
            </div>
            <div class="row-fluid">
              <div class="span6">
                <%= label_tag "feel_of_day", "Feel/Theme:"%>
                <%= text_field_tag "feel_of_day", @event.feel_of_day, class: "span12 input-xlarge"%>
              </div>
                  
              <div class="span6">
               <%= label_tag "attire", "Attire:"%>
                <%= text_field_tag "attire", @event.attire, class: "span12 input-xlarge"%>
              </div>
            </div>      
    </div>
    <div class="span2 ">
      <%= label_tag "coordinator", "Coordinator:"%>
      <%= text_field_tag "coordinator", @event.coordinator, class: "span12 input-xlarge"%>
      <%= label_tag "photographer", "Photographer:"%>
      <%= text_field_tag "photographer", @event.photographer, class: "span12 input-xlarge"%>
      <%= label_tag "budget", "Budget:"%>
      <%= text_field_tag "budget", @event.budget, class: "span12 input-small"%> 
    </div>
    
    <div class="span3">
      <%= label_tag "notes", "Event Notes:"%>
      <%= text_area_tag "notes", @event.notes, class: "span12", :rows=>8%>  
    </div>
  </div>


 <td><b><button class="btn btn-small" name= "save" value= "save" >Save</button>

    
 <hr />
 <td><b><a href= "/virtual_studio/<%=@event.id%>"><img src="/images/gerber.jpeg" width="30" height="30" class="img-rounded"/></a> vStudio 
 <td><b><a href="/generate_quote/<%=@event.id%>"><img src="/images/yellow_gerber.jpeg" width="30" height="30" class="img-rounded" /></a> Quote 
 <td><b><a href="/design_day_details/<%=@event.id%>"> <img src="/images/red_gerber.jpeg" width="30" height="30" class="img-rounded" /></a> Design Day Details 
 <hr />

 <h3> Arrangements & Quotable Items for Event </h3>
         
 <table class="table table-striped table-hover table-condensed">
      
     
      
      <th>Item Name *</th>
      <th>Quantity *</th>
      <th>Specifications</th>  
      <th>id</th>  
      <th></th>   
       
        <% for each in @specifications %>
           <tr>
             <td> <%= text_field_tag "spec_item-#{each.id}", each.item_name%></td>
            <td> <%= text_field_tag "spec_qty-#{each.id}", each.item_quantity / 100.0%></td>          
                     
            <td> <%= text_area_tag "spec_notes-#{each.id}", each.item_specs,  :rows=>1, :columns=>90%></td>
           
            
            <td> <%= hidden_field_tag "spec_id", each.id%>
                <%=each.id%></td> 
                 <td> <div class = 'label-spacer'></div> 
              <button class="btn btn-danger btn-mini" name="delete" value= <%=each.id%>>Delete</button></td>
                       

                    <%end%>
        <%= hidden_field_tag "ev_id", @event.id%>
        
  
             
    <%end%> 
    
    
    </table>
    
  <hr />  
    
     <div class = 'label-spacer'></div>
        <button class="btn btn-small" name="add" value= "add">Add New Arrangement & Save</button> 
 
 