
<%= form_tag homepage_path do %>
  
  
  

  <div class= "row-fluid">
    <div class="span9">
      <h4>Customer Search:</h4>
      <p> <%=text_field_tag "search_field", nil, placeholder: "who are you looking for?"%> <br>
      <%=button_tag "Search/Add", name: "search", class: "btn btn-small" %></p>
    </div>
    <div class="span3">
      <h4>Active Events For:</h4>
      <p><%= select_tag "view",  options_for_select(@view_prefs, Employee.where(id: session["found_user_id"]).first.view_pref), class: "input-medium"%><br>
      <%=button_tag "Show Me", name: "update_view", class:"btn  btn-small"%> </p>
    </div>  
  </div>

<%if Florist.where(id: session["found_florist_id"]).first.company_id == "flowerbuds"%>
    <%=button_tag "Admin Access", name: "admin_access", class:"btn btn-small"%><br>
  <%else%>
  <%end%>


<%end%>


<h3>Active Events</h3>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Events</th>
      <th>Date of Event</th>
      <th>Quote</th>
      <th>Quote Status</th>
      <th>W'sale Order Date</th> 
      <th>Phone</th>
      <th>Email</th>
      <th>Company</th>
      <th>Designer</th>
      <th>cust id</th>
      <th>event id</th>
    </tr>
  </thead>
      <tr>
      <%for event in @events%>
        <td><a href="cust_edit/<%=event.customer.id%>"> <%= event.customer.name %></a></td>
        <td><a href="event_edit/<%= event.id%>"> <%= event.name %>  </a></td>
        <td><%=event.date_of_event%></td>
        <td><%if event.quote != nil%>
                <a href="/generate_quote/<%=event.id%>"> <%=event.quote.quote_name%> </a> 
            <%else%>
                No Quote
            <%end%></td>
        <td><%if event.quote !=nil%>
                <%=event.quote.status%>
            <%else%>
                No Quote
            <%end%></td>
        <td><%if event.quote !=nil%>
                <a href="/wholesale_order_list/<%=event.quote.wholesale_order_date%>"><%=event.quote.wholesale_order_date%>
            <%else%>
            <%end%></td>
        <td><%=event.customer.phone1%></td>
        <td><%=event.customer.email%></td>
        <td><%=event.customer.company_name%></td>
        <td><%=event.employee.username%></td>
        <td><%= event.customer.id %></td>
        <td><%= event.id %></td>
      </tr>
      <%end%>
</table>

<p><i>Note: These are Active Events only (aka: event has not yet been delivered). This does not show already "delivered/fulfilled" events or "lost" proposals.</p>
 
 <div class="apple_pagination">
  <%=will_paginate @events%>
 </div>
 <br>
<p><i>Defaulted to show 100 events per page view</p>
  
  
 