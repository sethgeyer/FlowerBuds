
    <h3>Customer Search Results</h3>
    
  <%= form_tag homepage_path do %>  
  <p><%=text_field_tag "search_field", nil, placeholder: "who are you looking for?"%><br> 
  <button class="btn btn-small"name= "search" value= "search">Search Again</button> </p>
  <%end%>
  
  
   <h4> <a href="/cust_new">Add New Customer</a></h4>
    <table class="table table-striped table-hover ">   
     
     <th> Customer Name </th>
     <th> City </th>
     <th> State </th>
     <th> Phone (c) </th>
     <th> Email </th>
     <th> Company, if appl. </th>
     
     
      <% for customer in @customers%>
        <tr>      
          
            <td> <a href="/cust_edit/<%=customer.id%>"><%=customer.name%></a></td>
            <td> <%=customer.city%></td>
            <td> <%=customer.state%></td>
            <td> <%=customer.phone1%></td>
            <td> <%=customer.email%></td>
            <td> <%=customer.company_name%></td>
     
     
     
         </tr>
      <%end%>
    </table>
   