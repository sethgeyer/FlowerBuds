            <td> <%=each.item_name%></td> 
            <td> <%=(each.item_quantity / 100).to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse%></td>
            <td> <%=each.item_specs%></td>
  
        </tr>
        <%end%>
       </table>
