<%= error_messages_for @customer %>
   
<%= form_tag("/cust_edit", class: "form-horizontal") do %>
     
  <h3>Edit Customer</h3>
  
  <div class="row-fluid">
    <div class="span3">
      <div class= "control-group">
        <%= label_tag "contact_name", "Customer Name: *", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "contact_name", @customer.name%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "contact_email", "Email: *" , class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "contact_email", @customer.email%>     
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "phone1", "Phone (primary):", class:"control-label"%>    
        <div class="controls">
          <%= text_field_tag "phone1", @customer.phone1%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "phone2", "Phone (other):", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "phone2", @customer.phone2%> 
        </div>
      </div>    
    </div>  
<div class="span3">
      <div class= "control-group">
        <%=label_tag "company_name", "Company (if appl.):", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "company_name", @customer.company_name%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "groom_name", "Groom Name (if appl.):", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "groom_name", @customer.groom_name%>
        </div>
      </div>      
      <div class= "control-group">
        <%= label_tag "groom_email", "Groom Email:", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "groom_email", @customer.groom_email%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "groom_phone", "Groom Phone:", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "groom_phone", @customer.groom_phone%>
        </div>
      </div>
    </div>      
<div class="span3">
      <div class= "control-group">
        <%= label_tag "address", "Address", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "address", @customer.address, class: "input-xlarge"%>
        </div>
      </div>    
      
      <div class= "control-group">
        <%= label_tag "city", "City:", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "city", @customer.city%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "state", "State:", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "state", @customer.state, class: "input-mini"%>
        </div>
      </div>    
      <div class= "control-group">
        <%= label_tag "zip", "Zip:", class:"control-label"%>
        <div class="controls">
          <%= text_field_tag "zip", @customer.zip, class: "input-mini"%>
        </div>
      </div>    
      
    </div>      
  </div>

  <div class="row-fluid">
    <div class="span12">
      <%= label_tag "notes", "Customer Notes:"%> 
      <%= text_area_tag "notes", @customer.notes, rows: 3, cols: 450%>
    </div>
  </div>
    
<%=hidden_field_tag "customer_id", @customer.id%> 
   
    <br>
    
    <div class = 'label-spacer'></div>
      <button class= "btn btn-success" name= "save" value= "save">Save Updates</button>       
    <hr/>

  <h3> Events </h3>
    <%id = @customer.id%>
    <td> <a href="/event_new/<%=id%>"> Create New Event </a> </td>
    <table class="table table-striped table-hover ">       
      <th>Event Name</th>
      <th>Event Date</th>
      <th>Quote Name</th>
      <th>Quote Status</th>
      <th>Event Notes</th>
      <th>Designer</th>
      <th>id</th>
      <th><th>
      <% for event in @customer.events %>
        <tr>           
          <td> <a href="/event_edit/<%=event.id%>"> <%=event.name%> </a></td>
          <td> <%=event.date_of_event%> </td>
          <%if event.quote != nil%>
            <td><a href="/generate_quote/<%=event.id%>"> <%=event.quote.quote_name%> </a></td>
            <td><%=event.quote.status%></td>
          <%else%>
            <td>No Quote</td>
            <td>No Quote</td>
          <%end%> 
          <td> <%=event.notes%> </td>
          <td> <%= event.employee.username %> </td>
          <td> <%=event.id%></td>
          <td> <div class = 'label-spacer'></div> 
          <button class="btn btn-danger" name="delete" value= <%=event.id%>>Delete</button></td>
        </tr>
     
      <%end%>
    </table>
    
    
    
     <%end%>
 